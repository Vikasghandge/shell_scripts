#!/bin/bash
# ------------------------------------------------------------
# Kubernetes Master Node Setup Script (Ubuntu)
# ------------------------------------------------------------
# Author: Vikas Ghandge
# Description: This script automates the Kubernetes Master setup
# ------------------------------------------------------------

echo "ðŸš€ Starting Kubernetes Master Setup..."

# ------------------------------------------------------------
# Enable IPv4 packet forwarding
# ------------------------------------------------------------
echo "[STEP 1] Enabling IPv4 packet forwarding..."
cat <<EOF | sudo tee /etc/sysctl.d/k8s.conf
net.ipv4.ip_forward = 1
EOF

sudo sysctl --system

# Verify IPv4 forwarding
sysctl net.ipv4.ip_forward

# ------------------------------------------------------------
# Disable swap
# ------------------------------------------------------------
echo "[STEP 2] Disabling Swap..."
sudo swapoff -a

# ------------------------------------------------------------
# Setup Dockerâ€™s APT repository
# ------------------------------------------------------------
echo "[STEP 3] Setting up Docker repository..."
sudo apt-get update
sudo apt-get install -y ca-certificates curl
sudo install -m 0755 -d /etc/apt/keyrings
sudo curl -fsSL https://download.docker.com/linux/ubuntu/gpg -o /etc/apt/keyrings/docker.asc
sudo chmod a+r /etc/apt/keyrings/docker.asc

echo \
  "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.asc] https://download.docker.com/linux/ubuntu \
  $(. /etc/os-release && echo \"${UBUNTU_CODENAME:-$VERSION_CODENAME}\") stable" | \
  sudo tee /etc/apt/sources.list.d/docker.list > /dev/null

sudo apt-get update

# ------------------------------------------------------------
# Install Containerd
# ------------------------------------------------------------
echo "[STEP 4] Installing containerd..."
sudo apt-get install -y containerd.io

# ------------------------------------------------------------
# Generate default config for containerd
# ------------------------------------------------------------
echo "[STEP 5] Configuring containerd..."
sudo containerd config default | sudo tee /etc/containerd/config.toml > /dev/null

echo ""
echo "ðŸ‘‰ Please edit /etc/containerd/config.toml and change:"
echo "   SystemdCgroup = false  âž¡  SystemdCgroup = true"
echo "   Then press ENTER when done editing..."
read -p "Press ENTER to continue after editing the file..."

sudo systemctl restart containerd
sudo systemctl status containerd --no-pager

# ------------------------------------------------------------
# Install Kubernetes components
# ------------------------------------------------------------
echo "[STEP 6] Installing Kubernetes components..."
sudo apt-get update
sudo apt-get install -y apt-transport-https ca-certificates curl gpg

# Download Kubernetes key
curl -fsSL https://pkgs.k8s.io/core:/stable:/v1.33/deb/Release.key | sudo gpg --dearmor -o /etc/apt/keyrings/kubernetes-apt-keyring.gpg

# Add Kubernetes apt repository
echo 'deb [signed-by=/etc/apt/keyrings/kubernetes-apt-keyring.gpg] https://pkgs.k8s.io/core:/stable:/v1.33/deb/ /' | sudo tee /etc/apt/sources.list.d/kubernetes.list

sudo apt-get update
sudo apt-get install -y kubelet kubeadm kubectl

# Hold versions to prevent auto-updates
sudo apt-mark hold kubelet kubeadm kubectl

echo "âœ… Kubernetes Master Node setup complete!"
echo "You can now initialize the cluster using:"
echo "    sudo kubeadm init --pod-network-cidr=10.244.0.0/16"
